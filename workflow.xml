<workflow-app xmlns="uri:oozie:workflow:0.4" name="Maria_dev_WF">
    <start to="shell-node"/>
    <action name="shell-node">
        <shell xmlns="uri:oozie:shell-action:0.2">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <configuration>
                <property>
                        <name>mapred.job.queue.name</name>
                        <value>${queueName}</value>
                </property>
            </configuration>
            <exec>${shellAction}</exec>
            <argument>${inputdir}</argument>
            <file>${shellAction}#${shellAction}</file>
            <capture-output/>
        </shell>
        <ok to="end"/>
        <error to="fail"/>
    </action>
    <action name="sendEmail">
        <email xmlns="uri:oozie:email-action:0.1">
            <to>${emailToAddress}</to>
            <subject>Workflow's output ${wf:id()}</subject>
            <body>Results from the shell script execution: ${wf:actionData('shell-node')['NumberOfLines']}</body>
        </email>
        <ok to="end">
        <error to"fail"> 
    </action>
    <kill name="fail">
        <message>Shell action failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name="end"/>
</workflow-app>
